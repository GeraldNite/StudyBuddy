datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  createdAt DateTime @default(now())
}

model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())
  updateAt  DateTime @default(now())
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String @default("user") // "admin" | "user"
  createdAt DateTime @default(now())
  updateAt  DateTime @default(now()) 
}

model Product {
  id    Int    @id @default(autoincrement())
  name  String
  price Int
}
